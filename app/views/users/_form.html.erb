<div class="container">
  <%= render 'shared/errors', obj: @user %>

  <%= form_with(model: @user, local: true) do |f| %>
    <div class="form-group row">
      <%= f.label :username, class: "col-2 col-form-label" %>
      <div class="col-10">
        <%= f.text_field :username, class: "form-control", placeholder: "Enter Username" %>
      </div>

    </div>

    <div class="form-group row">
      <%= f.label :email, class: "col-2 col-form-label" %> <br>
      <div class="col-10">
        <%= f.email_field :email, class: "form-control", placeholder: "Enter Email" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :password, class: "col-2 col-form-label" %> <br>
      <div class="col-10">
        <%= f.password_field :password, class: "form-control", placeholder: "Enter Password" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.submit "Sign Up", class: "btn btn-primary" %>
    </div>

    <div class="row">
      <%= link_to 'Return to article listing', articles_path %>
    </div>

  <% end %>
</div>